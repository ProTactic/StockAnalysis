<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "System.CompanyOverviewRecord" table = "COMPANY">

        <meta attribute = "class-description">
            This class contains the company overview details.
        </meta>

        <id name = "id" type = "long" column = "id">
            <generator class="identity"/>
        </id>

        <properties name="UKSymbol" unique="true">
            <property name = "symbol" column = "symbol" type = "string"/>
        </properties>

        <property name = "name" column = "name" type = "string"/>
        <property name = "exchange" column = "exchange" type = "string"/>
        <property name = "currency" column = "currency" type = "string"/>
        <property name = "country" column = "country" type = "string"/>
        <property name = "sector" column = "sector" type = "string"/>

    </class>
</hibernate-mapping>